{
  "name": "fetchi",
  "version": "3.0.0",
  "description": "Fetch URLs, extract clean article content, and cache as markdown. Supports automatic JavaScript rendering via Playwright/Docker.",
  "type": "module",
  "main": "index.ts",
  "bin": {
    "fetchi": "./cli.ts"
  },
  "scripts": {
    "dev": "bun run index.ts",
    "start": "bun run index.ts",
    "cli": "bun run cli.ts",
    "fetch": "bun run cli.ts fetch",
    "list": "bun run cli.ts list",
    "test": "bun test",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:e2e": "bun test tests/e2e/",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "postinstall": "playwright install chromium || true"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@mozilla/readability": "^0.6.0",
    "linkedom": "^0.18.12",
    "playwright": "^1.56.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "@types/turndown": "^5.0.5"
  },
  "keywords": [
    "fetch",
    "markdown",
    "readability",
    "mcp",
    "playwright",
    "web-scraping",
    "article-extraction"
  ],
  "author": "",
  "license": "MIT"
}
