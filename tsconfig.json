{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "types": ["bun-types"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["*.ts", "src/**/*.ts", "src/types/**/*.d.ts", "tests/**/*.ts", "**/*.test.ts", "**/*.spec.ts"],
  "exclude": ["node_modules"]
}
